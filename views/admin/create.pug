html
  head
      link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
      link(rel="stylesheet", href="css/styles.css")

  body
    .container
        hr
        br
        p This is a form for you to create your wishlist
        form(action="/admin/create" method="post")
            .form-group.row
                label.col-sm-2.col-form-label(for='inputName') Product Name
                .col-sm-10
                    input#inputName.form-control(type='text' placeholder='Name' name="name")
            .form-group.row
                label.col-sm-2.col-form-label(for='inputDescription') Product Category
                .col-sm-10
                    input#inputDescription.form-control(type='text' placeholder='Book or Movie' name="description")
            .form-group.row
                label.col-sm-2.col-form-label(for='inputPrice') Price
                .col-sm-10
                    input#inputPrice.form-control(type='text' placeholder='CAD' name="price")
            .form-group.row
                label.col-sm-2.col-form-label(for='inputRating') Rating
                .col-sm-10
                    input#inputRating.form-control(type='text' placeholder='0-10' name="rating")
            .form-group.row
                label.col-sm-2.col-form-label(for='inputImage') Image
                .col-sm-10
                    input#inputImage.form-control(type='text' placeholder='Image' name="image")
            button.btn.btn-primary(href='/admin/create') Create